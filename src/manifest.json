{
  "manifest_version": 3,
  "name": "__MSG_extension_name__",
  "default_locale": "zh_CN",

  "description": "__MSG_extension_description__",

  "icons": {
    "16": "icons/app-icon-16.png",
    "48": "icons/app-icon-48.png",
    "64": "icons/app-icon-64.png",
    "128": "icons/app-icon-128.png"
  },

  "permissions": ["storage", "alarms", "notifications"],
  "host_permissions": [
    "https://api.live.bilibili.com/",
    "https://apis.zhanqi.tv/",
    "https://www.douyu.com/",
    "https://www.showroom-live.com/"
  ],
  "externally_connectable": {
    "ids": [
      "lbakekmebfhigegnjnabgedoamdfenjb",
      "*"
    ],
    "matches": [
      "https://live.bilibili.com/*",
      "https://www.zhanqi.tv/*",
      "https://www.douyu.com/*",
      "https://www.showroom-live.com/*"
    ]
  },

  "content_scripts": [
     {
        "matches": [
          "https://live.bilibili.com/*",
          "https://www.zhanqi.tv/*",
          "https://www.douyu.com/*",
          "https://www.showroom-live.com/*"
        ],
        "js": ["site_addons/script_injector.js"]
     }
  ],

  "web_accessible_resources": [
    {
      "resources": ["site_addons/bilibili_inject.js"],
      "matches": ["https://live.bilibili.com/*"]
    },
    {
      "resources": ["site_addons/zhanqi_inject.js"],
      "matches": ["https://www.zhanqi.tv/*"]
    },
    {
      "resources": ["site_addons/douyu_inject.js"],
      "matches": ["https://www.douyu.com/*"]
    },
    {
      "resources": ["site_addons/showroom_inject.js"],
      "matches": ["https://www.showroom-live.com/*"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  }
}
